div.container()
    nav(class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg")
        a(class="navbar-brand" href="#")
            img(src="/images/logo.png" class="d-inline-block mr-3" width=48 height=48 alt="")
            |#{companyName}
        ul(class="navbar-nav ml-auto flex-nowrap")
            li.nav-item
                a(class="nav-link nav-active hvr-underline-from-center" href="#") Home
            li.nav-item
                a(class="nav-link hvr-underline-from-center" href="#") About Us
            li.nav-item
                a(class="nav-link hvr-underline-from-center" href="#") References
            li.nav-item
                a(class="nav-link hvr-underline-from-center" href="#") Contact
            li.nav-item
        form.form-inline.ml-4()
        if(true)
            button(id="navLoginBtn" class="btn btn-outline-success my-2 my-sm-0" type="submit" data-toggle="modal" data-target="#loginModal") Login
            button(id="navRegisterBtn" class="btn btn-outline-success ml-2 my-2 my-sm-0" type="submit" data-toggle="modal" data-target="#registerModal") Register
        else
            button(id="navLogoutBtn" class="btn btn-outline-danger ml-2 my-2 my-sm-0" type="submit") Sign Out